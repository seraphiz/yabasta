<h1>SHOW</h1><%= link_to 'Volver', posts_path %>

<p><%= @post.tag.title %></p>
<p><%= @post.content %></p>
<p><%= @post.date %></p>
<p><%= @post.period_of_day %></p>
<p><%= @post.address %></p>
<p>
    <% if @post.anonymous == false %>
        <%= @post.user.username %>
    <% else %>
        Anonimo
    <% end %>

</p>
<br>

<%= render 'comments_posts', post:@post, comment: @comment %>
