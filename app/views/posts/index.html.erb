<label for="">Buscar por periodo:</label>
<input type="text" id="buscador">

<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Fecha</th>
            <th>Periodo del dia</th>
        </tr>
    </thead>
    <tbody id="lista">
       <%= render @posts %>
    </tbody>
</table>

<script>
  $('#buscador').keyup(function () {
    var searchQuery = $('#buscador').val();
    $.ajax({
      type: "GET",
      url: "<%= posts_path %>",
      data: { buscador: searchQuery }
    });
  });
</script>