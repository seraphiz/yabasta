<%= form_with(model: post) do |f| %>
<%= f.label :tag_id, 'Tipo de crimen de odio:' %>
<%= f.select :tag_id, @title_tag_select %>
<br>
<%= f.label :content, 'Describe tu relato:' %>
<%= f.text_area :content %>
<br>
<%= f.label :date, 'Fecha del suceso:' %>
<%= f.date_field :date, min: "2017-01-01", max: @date_today %>
<br>
<%= f.label :period_of_day, 'Periodo del día:' %>
<%= f.text_field :period_of_day %>
<br>
<%= f.label :age, 'Edad:' %>
<%= f.number_field :age, {min:"0", max:"100"} %>
<br>
<%= f.label :name, 'Nombre:' %>
<%= f.text_field :name %>
<br>
<%= f.label :address, 'Ubicación del suceso:' %>
<%= f.text_field :address %>
<br>
<%= f.label :anonymous, 'Relato anónimo:' %>
<%= f.check_box :anonymous %>
<%= f.submit %>
<% end %>
