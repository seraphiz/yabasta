<% content_for :title, "Inicio de sesión" %>
<div class="row">
  <div class="col-6 col-md-4"></div>
  <div class="col-6 col-md-4 center-login">

<h2>Ingresa tus datos ¡Ya BASTA!</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, 'Email*' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "tu@correo.com" %>
  </div>

  <div class="field">
    <%= f.label :password, 'Contraseña*' %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "******" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Recordarme' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Iniciar sesión" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
  <div class="col-6 col-md-4"></div>
</div>