<div class="container center-login"><h2>Registro ¡Ya Basta!</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="row">
  <div class="col-6 col-md-6">

  <div class="field">
    <%= f.label :username, 'Nombre de Usuario' %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>

   <div class="field">
    <%= f.label :name, 'Nombres y apellidos' %><br />
    <%= f.text_field :name, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :birthdate, 'Fecha de nacimiento' %><br />
    <%= f.date_field :birthdate, min: "1919-01-01", max: @date_today %>
  </div>

  <div class="field">
    <%= f.label :genre, 'Género' %><br />
    <%= f.select :genre, options_for_select(["Masculino", "Femenino", "Otros"]), prompt: "Seleccione un genero" %>
  </div></div>

  <div class="col-6 col-md-6">
  <div class="field">
    <%= f.label :email, 'Email' %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, 'Contraseña' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirme tu contraseña' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br>

   <div class="actions">
    <%= f.submit "Regístrate" %>
  </div>
  </div>
<% end %>
</div>


 

<%= render "devise/shared/links" %>
</div>